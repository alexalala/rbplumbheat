---
// Astro component script section
const companyName = "RB Plumbing and Heating";
const phoneNumber = "07771924736";
const email = "rbplumbingheatingservices@gmail.com";
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{companyName}</title>
		<link href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<div class="container">
			<header>
				<img src="/image.jpg" alt={companyName} />
				<h1>{companyName}</h1>
			</header>

			<div class="animation-section">
				<div class="animation-container">
					<svg
						viewBox="0 0 1100 1100"
						xmlns="http://www.w3.org/2000/svg"
					>   
						<path
							d="m540 540
							v-250
							a 250 250 0 1 0 -250 250
							h520
							a 250 -250 0 1 0 -250 -250
							v520 
							a 250 -250 0 1 0 250 -250 
							h-520
							a 250 250 0 1 0 250 250z"
							stroke-dasharray="618%"
							stroke-dashoffset="618%"
							fill="transparent"
							stroke="#0083d2"
							stroke-width="12"
							class="offset-animate"
						>
						</path>
						<path
							d="m540 540
							v-250
							a 250 250 0 1 0 -250 250
							h520
							a 250 -250 0 1 0 -250 -250
							v520 
							a 250 -250 0 1 0 250 -250 
							h-520
							a 250 250 0 1 0 250 250z"
							fill="transparent"
							stroke="hsla(10, 50%,50%,0.4)"
							stroke-width="12"
						>
						</path>
					</svg>
				</div>
			</div>

			<div class="text-section">
				<p>
					Welcome to {companyName}, your trusted specialists in plumbing and heating services.<br><br>
					We proudly serve the Norwich and North Norfolk area, offering top-quality solutions for all your residential and commercial needs. Whether it's a quick repair, a new installation, or routine maintenance, our experienced team is here to help. <br><br>
					Contact us today to experience reliable and professional service.
				</p>
			</div>

			<div class="contact-section">
				<div class="contact-links">
					<a href={`tel:${phoneNumber}`}>Call Us: 07771 924 736</a>
					<a href={`mailto:${email}`}>Email Us: {email}</a>
				</div>
			</div>

			<div class="copyright">
				<p>&copy; <span id="current-year">{currentYear}</span> {companyName}. All rights reserved.</p>
			</div>
		</div>

		<script is:inline>
			// Update year dynamically on client-side
			const yearElement = document.getElementById('current-year');
			if (yearElement) {
				yearElement.textContent = new Date().getFullYear().toString();
			}
		</script>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		background-color: #494d55;
		color: white;
		font-family: 'Roboto', Arial, sans-serif;
		line-height: 1.6;
		padding: 20px;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	header {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	header img {
		width: 100px;
		height: 100px;
		padding: 1rem;
		object-fit: cover;
		border-radius: 8px;
		flex-shrink: 0;
		display: block;
	}

	h1 {
		font-size: 2.5rem;
		font-family: 'PT Serif', serif;
		text-align: left;
		margin: 0;
		padding: 0;
		line-height: 1.2;
	}

	.animation-section {
		display: flex;
		justify-content: center;
		margin: 2rem 0;
	}

	.animation-container {
		width: 150px;
		height: 200px;
	}

	.animation-container svg {
		width: 100%;
		height: 100%;
	}

	.text-section {
		margin: 3rem;
	}

	p {
		font-size: 1.2rem;
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.contact-section {
		margin: 3rem 0 0 0;
		padding: 2rem;
		text-align: center;
	}

	.contact-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.contact-links a {
		color: white;
		text-decoration: none;
		font-size: 1.1rem;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		transition: background-color 0.3s ease;
	}

	.contact-links a:hover {
		background-color: rgba(255, 255, 255, 0.1);
	}

	.copyright {
		text-align: center;
		padding: 1.5rem 0;
		margin-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.7);
	}

	.offset-animate {
		animation: stroke-dashoffset 10s infinite;
	}

	@keyframes stroke-dashoffset {
		0% {
			stroke-dashoffset: 618%;
		}
		100% {
			stroke-dashoffset: -618%;
		}
	}

	/* Mobile styles */
	@media (max-width: 768px) {
		body {
			padding: 15px;
		}

		header img {
			width: 120px;
			height: 120px;
		}

		h1 {
			font-size: 1.6rem;
		}

		.animation-container {
			width: 150px;
			height: 150px;
		}

		p {
			font-size: 1rem;
		}

		.contact-links {
			flex-direction: column;
			gap: 1rem;
		}

		.contact-links a {
			font-size: 1rem;
		}

		.copyright {
			font-size: 0.85rem;
			padding: 1rem 0;
		}
	}
</style>
